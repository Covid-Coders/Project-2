<div data-aos="fade-right">
    <div class="card">
        <header class="card-header">
            <p class="card-header-title">
                <a href="{{link}}" target="_blank">{{resourceName}}
                    <span class="icon link-icon">
                        <i class="fas fa-external-link-alt"></i>
                    </span>
                </a>
            </p>
        </header>
        <div class="card-content">
            <div class="content">
                <p><strong>Description:</strong> {{description}}</p>
            </div>
        </div>
        <footer class="card-footer">
            {{#if saved}}
            <a data-id="{{id}}"
                class="remove-saved-resource card-footer-item hvr-sweep-to-right"><strong>Remove</strong></a>
            {{else}}
            <a data-id="{{id}}" class="save-resource card-footer-item hvr-sweep-to-right"><strong>Save</strong></a>
            {{/if}}
        </footer>
    </div>
</div>